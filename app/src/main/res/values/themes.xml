<resources>
    <!-- Base application theme. -->
    <style name="Theme.EasyEnglish" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/themeMainColor</item>
        <item name="colorPrimaryVariant">@color/themeMainVariantColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/themeSecondColor</item>
        <item name="colorSecondaryVariant">@color/themeSecondVariantColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/trans</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EasyEnglish.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/colorThemeBackground</item>
        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_animate_icon</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">500</item>
        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.EasyEnglish.FullscreenTheme</item>
    </style>

    <!--Fullscreen Theme-->
    <style name="Theme.EasyEnglish.FullscreenTheme" parent="Theme.EasyEnglish">
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

</resources>